<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".config">

    <View
        android:id="@+id/containerCompoment"
        style="@style/ContainerComponent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Trocar_Email_id"
        style="@style/buttons"
        android:text="@string/Tmail"
        app:layout_constraintBottom_toTopOf="@+id/Trocar_Senha_id"
        app:layout_constraintEnd_toEndOf="@+id/containerCompoment"
        app:layout_constraintTop_toTopOf="@+id/containerCompoment" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Trocar_Senha_id"
        style="@style/buttons"
        android:layout_marginBottom="32dp"
        android:text="@string/Tsenha"
        app:layout_constraintBottom_toBottomOf="@+id/containerCompoment"
        app:layout_constraintEnd_toEndOf="@+id/containerCompoment" />
</androidx.constraintlayout.widget.ConstraintLayout>